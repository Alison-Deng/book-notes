<%- include('partials/header.ejs'); -%>



<div class = "container text-center">
    <h1 class="display-5 fw-bold text-body-emphasis mt-5">Delete A Note</h1>
    <% if (locals.success) { %>
        <h5 style = "color: red;" id = "register"><%= success %></h5>
    <% } %>
    <% if (locals.auth === "google") { %>
        <p class="lead mt-5">Welcome to Delete, google user <%= user %><p>
        <form method = "POST" action = "/delete-post" class = "pt-2 starting">
            <input name="post_id" type="text" class="feedback-input" placeholder="id to be deleted" />
            <input type="submit" value="SUBMIT" />
        </form>
    <% } else if (locals.auth === "regular") { %> 
        <p class="lead mt-5">Welcome to Delete, regular user <%= user %><p></p>
        <form method = "POST" action = "/delete-post" class = "pt-2 starting">
            <input name="post_id" type="text" class="feedback-input" placeholder="id to be deleted" />
            <input name="password" type="password" class="feedback-input" placeholder="shhh..secret(password)" />
            <input type="submit" value="SUBMIT" />
        </form>
    <% } %>
</div>



<%- include('partials/footer.ejs'); -%>